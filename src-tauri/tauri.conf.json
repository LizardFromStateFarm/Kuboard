{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kuboard",
  "version": "0.1.0",
  "identifier": "com.kuboard.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Kuboard - Kubernetes Dashboard",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Kuboard Team",
    "copyright": "Copyright Â© 2025 Kuboard. All rights reserved.",
    "category": "DeveloperTool",
    "shortDescription": "Kubernetes Desktop Dashboard",
    "longDescription": "A cross-platform Kubernetes desktop GUI application for managing clusters, contexts, and monitoring resources.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
